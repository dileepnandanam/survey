<p id="notice"><%= notice %></p>

<div>
  <h2>Question:
  <%= @question.content %></h2>
</div>




<% if current_user==nil %>
  <p>
    Please sign in to answer questions
  </p>



<% elsif current_user.priviledge=="administrator" %>
  <h3>Ansers:</h3>
  <% if @question.answer_type == "word" %>
    <br />
    <table>
    <% @question.wordanswers.each do |answer| %>
      
      <tr>
        <td><%= User.find_by_id(answer.user_id).name%>:</td>
      </tr>
      <tr>
        <td></td><td><%= answer.content %></td>
      </tr>
     <% end %>
     </table>
     
  <% elsif @question.answer_type == "text" %>
    
    <table>
    <% @question.textanswers.each do |answer| %>
      
      <tr>
        <td><%= User.find_by_id(answer.user_id).name%>:</td>
      </tr>
      <tr>
        <td></td><td><%= answer.content %></td>
      </tr>
     <% end %>
     </table>
     
     
  <% else %>
    
    Yes:<%= @yesc%><br />
    No:<%= @noc%><br />
  <% end %>
  
    
<% end %>
<%= link_to 'Back', Questionare.find_by_id(cookies[:current_questionare_id]) %>


  




  
